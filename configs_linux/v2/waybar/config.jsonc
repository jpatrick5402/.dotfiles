{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "height": 30,
    "margin-top": 5,
    "margin-bottom": 0,
    "margin-left": 5,
    "margin-right": 5,
    "spacing": 10,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "custom/launcher",
    ],
    "modules-right": [
        "tray",
        "cpu",
        "memory",
        "disk",
        "network",
        "pulseaudio",
        "battery",
        "clock",
        "custom/notifications"
    ],

    // Module definitions
    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate"
    },
    
    "hyprland/window": {
        "format": "{title}"
    },
    
    "custom/launcher": {
        "format": "󰣇",
        "tooltip": true,
        "tooltip-format": "Applications",
        "on-click": "wofi" // Or your preferred app launcher command
    },
    
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    "cpu": {
        "format": " {usage}%",
        "on-click": "hyprctl -q dispatch exec kitty btop",
    },
    
    "memory": {
        "format": "󰍛 {}%",
        "on-click": "hyprctl -q dispatch exec kitty btop",
    },
    
    "disk": {
        "format": "󰋊 {percentage_used}%",
        "tooltip": true,
        "path": "/",
        "on-click": "baobab",
    },
    
    "network": {
        "format-wifi": "󰤨 {signalStrength}%",
        "format-ethernet": "󰈀 {ifname}",
        "format-disconnected": "󰤮",
        "tooltip-format-wifi": "Signal: {signalStrength}% ({essid})",
        "tooltip-format-ethernet": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format-disconnected": "Disconnected"
    },
    
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "󰂱 {volume}%",
        "format-muted": "󰖁",
        "format-icons": {
            "default": ""
        },
        "on-click": "pavucontrol",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
    },
    
    "battery": {
        "states": {
            "good": 90,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "󰂄 {capacity}%",
        "format-plugged": "󰂄 {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
    },
    
    "clock": {
        "format": "󰃰 {:%a %b %d %H:%M}",
        "tooltip-format": "{:%Y %B %d %H:%M}"
    },
    
    "custom/notifications": {
        "format": " ",
        "tooltip": true,
        "tooltip-format": "notifications",
        "on-click": "makoctl history | awk '/^Notification/{if (NR!=1) print \"\"; printf \"%s\", $0; next} /App name:/{printf \"\t%s\", $0; next} /Urgency:/{printf \"\t%s\", $0} END {print \"\"}' | wofi --dmenu -i -p \"Notification History\" | wl-copy",
    }
}
